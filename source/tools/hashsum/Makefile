#############################################################################
# Executable name
#############################################################################

TARGET = hashsum

#############################################################################
# Libraries 
#############################################################################

LIBS = \
     -lcore
#    -luuid

#############################################################################
# Source and header files
#############################################################################

SOURCES = \
    source/main.cpp \
    source/guid.cpp

HEADERS = \
    source/guid.h

#############################################################################
# Setup build platform rules and set build dir to tools folder
#############################################################################

SOLIDCORE = ../../..

INSTALL_DIR = $(SOLIDCORE)/tools/$(COMPILE_PLATFORM)

include $(SOLIDCORE)/Makefile.rules

#############################################################################
# Build as executable
#############################################################################

debug: bin/$(OUTPUT_DIR)/$(TARGET)$(EXE)
release: bin/$(OUTPUT_DIR)/$(TARGET)$(EXE)
