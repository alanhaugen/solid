#############################################################################
# Library name and path 
#############################################################################

TARGET = libbulletphysics
SOLIDCORE = ../../../..

#############################################################################
# Source files
#############################################################################

SOURCES = \
        bulletphysics.cpp

HEADERS = \
        bulletphysics.h

#############################################################################
# Setup build platform rules 
#############################################################################

include $(SOLIDCORE)/Makefile.rules

#############################################################################
# Build as library
#############################################################################

debug: $(SOLIDCORE)/lib/$(OUTPUT_DIR)/$(TARGET).a
release: $(SOLIDCORE)/lib/$(OUTPUT_DIR)/$(TARGET).a
