#############################################################################
# Executable name
#############################################################################

TARGET = game

#############################################################################
# Libraries 
#############################################################################

LIBS = \
	-lcore

#############################################################################
# Source and header files
#############################################################################

SOURCES = \
        source/main.cpp \
        source/guy.cpp \
        source/invader.cpp \
        source/minigames.cpp

HEADERS = \
	source/guy.h \
        source/invader.h \
        source/minigames.h

#############################################################################
# Setup build platform rules
#############################################################################

SOLIDCORE = ../..

include $(SOLIDCORE)/Makefile.rules

#############################################################################
# Build as executable
#############################################################################

release: executable
debug: executable 
